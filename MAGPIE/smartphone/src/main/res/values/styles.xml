<resources>

    <!-- Base application theme. -->
    <style name="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>




    <style name="adapter_cells">
        <item name="android:paddingRight">@dimen/adapter_cell_padding</item>
        <item name="android:paddingLeft">@dimen/adapter_cell_padding</item>
        <item name="android:textSize">@dimen/adapter_cell_textSize</item>

    </style>

    <style name="adapter_cells_value" parent="adapter_cells">
        <item name="android:textColor">@color/red</item>

    </style>

    <style name="img_smallimg" parent="adapter_cells">
    </style>




    <!-- DISPLAY SETTINGS STYLE !-->


    <style name="scroll_view_display_rules">
    <item name="android:layout_height">@dimen/scroll_view_display_rules_height</item>
    </style>

    <!-- USED TO DISPLAY THE TEXT IN THE SETTINGS !-->
    <style name="txtView_displayConstraint">
        <item name="android:textSize">@dimen/display_constraint_height</item>

    </style>

    <style name="edittxt_values">
        <item name="android:layout_width">100dp</item>
        <!-- USED TO SOLVE BUG OF TEXT DISAPEAR IF WE CHANGE FRAGMENT !-->
        <item name="android:ellipsize">start</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="txtView_toast"
        ></style>


