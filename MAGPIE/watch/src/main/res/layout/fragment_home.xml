<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_fragment_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageButton
        android:onClick="click_setSteps"
        android:background="@null"
        android:scaleType="fitXY"
        android:id="@+id/img_severity_step"
        style="@style/img_status"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:src="@drawable/step_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.679"
        app:layout_constraintLeft_toRightOf="@+id/img_severity_pressure" />

    <ImageButton
        android:id="@+id/img_severity_pressure"
        style="@style/img_status"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@null"
        android:onClick="click_setPressure"
        android:scaleType="fitXY"
        android:src="@drawable/pressure_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.228"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.679" />

    <ImageButton
        android:id="@+id/img_severity_glucose"
        style="@style/img_status"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:background="@null"
        android:onClick="click_setGlucose"
        android:scaleType="fitXY"
        android:src="@drawable/glucose_green"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.097"
        app:layout_constraintHorizontal_bias="0.62" />

    <ImageButton
        android:onClick="click_setPulse"
        android:background="@null"
        android:scaleType="fitXY"
        android:id="@+id/img_severity_pulse"
        style="@style/img_status"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:src="@drawable/pulse_green"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintVertical_bias="0.097" />

    <TextView
        android:id="@+id/txtView_pulseValue"
        style="@style/txtView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/img_severity_pulse"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintLeft_toLeftOf="@+id/img_severity_pulse"
        app:layout_constraintRight_toRightOf="@+id/img_severity_pulse"
        app:layout_constraintTop_toTopOf="@+id/img_severity_pulse" />

    <TextView
        android:id="@+id/txtView_GlucoseValue"
        style="@style/txtView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/img_severity_glucose"
        app:layout_constraintLeft_toLeftOf="@+id/img_severity_glucose"
        app:layout_constraintRight_toRightOf="@+id/img_severity_glucose"
        app:layout_constraintTop_toTopOf="@+id/img_severity_glucose" />

    <ImageButton
        android:id="@+id/img_severity_weight"
        style="@style/img_status"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:background="@null"
        android:onClick="click_setWeight"
        android:scaleType="fitXY"
        android:src="@drawable/weight_green"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.097" />

    <TextView
        android:id="@+id/txtView_DiastolValue"
        style="@style/txtView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-44dp"
        android:layout_marginLeft="2dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintLeft_toRightOf="@+id/textView3" />

    <TextView
        android:id="@+id/txtView_weightValue"
        style="@style/txtView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/img_severity_weight"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/img_severity_weight"
        app:layout_constraintRight_toRightOf="@+id/img_severity_weight"
        app:layout_constraintTop_toTopOf="@+id/img_severity_weight"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtView_stepValue"
        style="@style/txtView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.899" />

    <TextView
        android:id="@+id/txtView_systolValue"
        style="@style/txtView_title"
        android:layout_width="35dp"
        android:layout_height="24dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_severity_pressure"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView3"
        style="@style/txtView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        app:layout_constraintBottom_toBottomOf="@+id/txtView_systolValue"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/txtView_systolValue"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/txtView_systolValue"
        android:layout_marginLeft="5dp"
        app:layout_constraintVertical_bias="0.0" />

    <include
        android:id="@+id/bar_step"
        style="@style/bar_level_icon"
        layout="@layout/bar_level"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.69" />

    <include
        android:id="@+id/bar_pulse"
        style="@style/bar_level_icon"
        layout="@layout/bar_level"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024" />

    <include
        android:id="@+id/bar_sys"
        style="@style/bar_level_icon"
        layout="@layout/bar_level"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.139"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.647" />

    <include
        android:id="@+id/bar_dias"
        style="@style/bar_level_icon"
        layout="@layout/bar_level"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.647"
        app:layout_constraintHorizontal_bias="0.379" />

    <include
        android:id="@+id/bar_weight"
        style="@style/bar_level_icon"
        layout="@layout/bar_level"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.769"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.084" />

    <include
        android:id="@+id/bar_glucose"
        style="@style/bar_level_icon"
        layout="@layout/bar_level"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11" />


</android.support.constraint.ConstraintLayout>